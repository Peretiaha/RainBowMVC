@model RainbowWeb.Models.Commands

@{
    ViewBag.Title = "Index";
    
}

<head>
    <title></title>
    <link type="text/css" rel="stylesheet" href="~/Content/CommandList.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />

</head>


<body style="background: linear-gradient(180deg, #96f6f6,#0da3f1, #7e80ff);">
    <header class="Header">
        <div class="navbarLogo"></div>
        <div class="navbarLogo2"></div>
        <div class="Nav">
            <nav class="MyNavBar" id="menu">
                <div class="NavBlock">
                    @*<a href="#Home">Home</a>*@
                    @Html.ActionLink("Home", "../Home/Index")
                </div>
            </nav>
        </div>
    </header>
    <container>
        <section>
            <div class="CommandPage">

                @foreach (var i in ViewBag.Command)
                {
                    if (ViewBag.i % 2 != 0)
                    {
                        <div class="Command">
                            <div class="ImgLeft">
                                @Html.Raw("<img style='width:370px; height:250px;' src=\"data:image/jpeg;base64,"
                                      + Convert.ToBase64String(i.Img) + "\" />")
                            </div>
                            <div class="TextCommand">
                                <div class="TitleCommand">
                                    <h3>@i.Name</h3>
                                    <div class="SubTitleCommand">
                                        <h4>@i.Description</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="Command">
                            <div class="TextCommandLeft">
                                <div class="TitleCommand">
                                    <h3>@i.Name</h3>
                                    <div class="SubTitleCommand">
                                        <h4>@i.Description</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="ImgRight">
                                @Html.Raw("<img style='width:370px; height:300px; background-size: cover;' src=\"data:image/jpeg;base64,"
                                      + Convert.ToBase64String(i.Img) + "\" />")
                            </div>
                        </div>



                    }
                    ViewBag.i++;
                }
            </div>
        </section>
    </container>

</body>

