@model RainbowWeb.Models.Users

@{
    ViewBag.Title = "Registration";
}

<head>
    <link type="text/css" rel="stylesheet" href="~/Content/CommandList.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    
</head>

<header class="Header">
    <div class="navbarLogo"></div>
    <div class="navbarLogo2"></div>
    <div class="Nav">
        <nav class="MyNavBar" id="menu">
            <div class="NavBlock">
                @*<a href="#Home">Home</a>*@
                @Html.ActionLink("Home", "../Home/Index")
            </div>
        </nav>
    </div>
</header>

<body style="background: linear-gradient(180deg, #96f6f6,#0da3f1, #7e80ff);">
    <div class="RegForm">
        <h2 style="padding-top:15px; text-align: center; font-family: 'Arial Полужирный', 'Arial Обычный', 'Arial'; font-weight: 700;
    font-style: normal; font-size: 36px; color: #FFFFFF;">Registration</h2>
        <div class="RegTextboxes">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Password ", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.Label("Birthday ", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Phone ", htmlAttributes: new { @class = "control-label col-md-2 text" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "textbox" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>



                <label class="label-success">@ViewBag.Success</label>
                <label class="label-danger">@ViewBag.ErrorMessage </label>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="background: linear-gradient(180deg, #7e80ff, #0da3f1);" type="submit" value="Create my account" class="buttonRegistr" />
                    </div>
                </div>
            </div>
        }
            </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
